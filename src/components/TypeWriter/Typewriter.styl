
.typewriter
  display inline-block
  white-space nowrap
  overflow hidden
  font-size: 3rem;

.typewriter-text
  display inline-block
  border-bottom 5px solid rgba(20, 157, 221, 0.45)
  padding-bottom 0.1em

.cursor
  display inline-block
  width 2px
  height 1em
  margin-left 2px
  background #fff
  animation blink 0.8s step-end infinite

@keyframes blink
  50%
    background transparent