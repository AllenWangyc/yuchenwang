.project-container
  position relative
  margin 2rem 0
  display flex
  justify-content center
  align-items flex-start

  /* Base card: fixed size using rem units */
  .project-base
    background #ffffff
    border-radius 0.5rem
    width 27rem      /* 360px / 16 */
    height 30rem       /* 400px / 16 */
    padding 6rem 1.5rem 1.5rem
    box-shadow 0 0.25rem 0.75rem rgba(0,0,0,0.1)
    display flex
    flex-direction column
    justify-content space-between

    .project-title
      color #1B2A41
      margin 1rem 0 1rem   /* push down from demo overlap */
      font-size 1.6rem

    .project-desc
      color #555555
      flex 1
      font-size 1rem
      line-height 1.6
      white-space pre-line
      margin 1rem 0
      overflow auto

    .project-links
      display flex
      gap 1rem

      a
        color #000
        text-decoration none
        font-weight 500
        display inline-flex
        align-items center
        gap 0.5rem
        transition color 0.3s
        &:hover
          color rgb(20,157,221)
        .github-logo
          width 1.2rem
          height 1.2rem

  /* Demo card: fixed size and overlap */
  .project-demo
    position absolute
    top -5.625rem        /* -90px / 16 */
    width 18.25rem        /* 292px / 16 */
    height 11.25rem       /* 180px / 16 */
    left calc(50% - 9.125rem)  /* -(width/2) */
    border-radius 0.5rem
    overflow hidden

    img
      display block
      width 100%
      height 100%
      object-fit cover
