// Hidden scrollbar
::-webkit-scrollbar
  display none

.layout    
  display flex
  .sider
    display flex
    flex-direction column
    position sticky
    top 0
    height 100vh
    overflow auto

    .info-container
      height 30%

      .avatar-wrapper
        display flex
        justify-content center
        align-items center
        height 70%
      .name-wrapper
        display flex
        justify-content center
        height 30%
        .name
          font-size 2rem
          font-weight 550

    .menu-wrapper
      // flex 1
      height 40%
      overflow auto

    .bottom-container
      position relative
      height 30%

    .bottom-wrapper
      position: sticky
      bottom: 0
      // padding-top: 5rem
      width 100%
      padding 1rem

      .resume-btn-wrapper
        display flex
        justify-content center
        margin-bottom 3rem
        .ant-btn
          width 80%
          border-radius 2rem

      .social-container
        display flex
        justify-content center
        gap 2.5rem
        a
          width 2rem; height 2rem
          img
            width 100%; height 100%
            object-fit contain
            filter grayscale(30%) brightness(1.2)
            transition filter 0.3s, transform 0.3s
          &:hover img
            filter none
            transform scale(1.1)
  
  .content
    flex 1