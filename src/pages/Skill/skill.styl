.P-skill
  padding 4rem 3rem

  // Maximum central
  max-width 1350px
  margin 0 auto

.skills-grid
  display grid
  grid-template-columns repeat(5, 1fr)
  gap 2rem
  margin-top 2rem

.skill-item
  position relative
  text-align center

  .skill-icon
    width 3rem
    height 3rem
    margin 0 auto
    transition transform 0.3s ease

  &:hover .skill-icon
    transform scale(1.2)

  .skill-tooltip
    position absolute
    bottom -1.75rem
    left 50%
    transform translate(-50%, 10px)
    background rgba(0, 0, 0, 0.75)
    color #fff
    font-size 0.875rem
    padding 0.25rem 0.5rem
    border-radius 4px
    white-space nowrap
    opacity 0
    transition opacity 0.3s ease, transform 0.3s ease

  &:hover .skill-tooltip
    opacity 1
    transform translate(-50%, 0)
