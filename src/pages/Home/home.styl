.hero 
  background: url('/assets/bg_image.jpg') no-repeat 
  background-size: cover;
  height: 100vh;

  /* 让内部的绝对定位文字参照它来布局 */
  position: relative;

  /* 可选：在图上加个半透明遮罩，提升文字可读性 */

.hero::before 
  content: '';
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1;


.hero-text 
  /* Text float on the upper layer */
  position: absolute;
  z-index: 2;

  /* horizontally and vertically central */
  top: 45%;
  left: 35%;
  transform: translate(-50%, -50%);

  color: #fff;
  text-align: center;

.hero-text h1 
  font-size: 6rem;
  margin: 0;

.hero-text p 
  font-size: 3rem;
  margin: 0.5rem 0 0;
  border-bottom: 2px solid #1DA57A;  /* 下面那条线示例 */
  display: inline-block;
  padding-bottom: 0.25rem;
