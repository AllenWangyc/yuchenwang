.P-projects
  padding 4rem 3rem

  // Maximum central
  max-width 1350px
  margin 0 auto

.projects-carousel
  position relative
  width 100%
  height 0
  padding-top 38%     /* maintain aspect ratio container */

.carousel-item
  position absolute
  top 80%
  left 50%
  transform translate(-50%, -50%) scale(0)
  opacity 0
  transition transform 0.6s ease, opacity 0.6s ease, filter 0.6s ease
  cursor pointer

.carousel-item.active
  transform translate(-50%, -50%) scale(1)
  opacity 1
  z-index 3
  filter none

.carousel-item.left
.carousel-item.right
  transform translate(-50%, -50%) scale(0.8)
  opacity 0.5
  z-index 1
  filter blur(4px)

.carousel-item.left
  /* shift left */
  transform translate(-115%, -50%) scale(0.8)

.carousel-item.right
  /* shift right */
  transform translate(25%, -50%) scale(0.8)

.carousel-item.hidden
  pointer-events none

.carousel-controls
  margin-top 2rem
  display flex
  justify-content center
  gap 1rem

  .ctrl
    background transparent
    border none
    color #fff
    font-size 2rem
    cursor pointer
    transition color 0.3s
    &:hover
      color #1DA57A
